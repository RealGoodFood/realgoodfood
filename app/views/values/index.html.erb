<head>
 <%= stylesheet_link_tag 'paginate.css' %>
</head>
<body>
<h1>Listing values</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @values.each do |value| %>
  <tr>
    <td><%= value.name %></td>
    <td><%= link_to 'Show', value %></td>
    <td><%= link_to 'Edit', edit_value_path(value) %></td>
    <td><%= link_to 'Destroy', value, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Value', new_value_path %><br /><br />

<div class="digg_pagination">
 <div clas="page_info">
   <%= paginate @value_per_page, :page_links => false %>
 </div>
</div>

</body>
