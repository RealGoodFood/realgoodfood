      <% end %>
      </ul>
    </div>
  <% end %>	


  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
    <b><%= f.label :title %></b><br />
    <%= f.text_field :name, 
                     :placeholder=>"food listing name",
                     :class=>"inner-inputbox-large",
                     :id=>"textfield" %><br />
  </div><br /><br />


  <div class="field">
    <%= f.label :Description %>
